#
# after_print_stats
#
#	A freewrite after function to print statistics from the session file.
#	The statistics are gathered in the after_collect_stats function file.
#

after_print_stats () {
	local word_count=$(grep "word_count:" $data_file | sed 's/.*: //')
	local pace=$(grep "pace:" $data_file | sed 's/.*: //')
	local pace_status=$(grep "pace_status:" $data_file | sed 's/.*: //')
	echo "You wrote $word_count words. Your defined pace is $pace words."
	echo "This session is $pace_status."
}