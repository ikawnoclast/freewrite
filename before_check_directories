# 
# before_check_directories
#
#	A freewrite _before function to check for the existence of specific 
#	directories to store the free write session files. 
#

before_check_directories () {
	local fw_base_dir=$(dirname $session_file)
	local status=0
	if [ ! -d $dropbox_dir ]; then
		echo "$0: Dropbox directory \"$dropbox_dir\" is missing. Exiting!"
		status=1
	fi
	
	if [ $status -eq 0 -a ! -d $fw_base_dir ]; then
		mkdir -p $fw_base_dir
	fi
	return $status
}